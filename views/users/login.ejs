<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <%- partial('header') %>
  </head>
  <body>
    <div class="container">
      <div class="outter">
        <div class="middle">
          <div class="inner">
            <div class="innerContainer" style="margin-bottom: 10px;">
              <a href="/"><img src="logo.png" alt="모두이" class="logo"></img></a>
            </div>
            <% loginError.forEach(function (err) { %>
              <label style="color: #d93025;"><%= err %></label>
            <% }); %>
            <form class="loginForm" action="/login" method="post" style="margin-top: 20px;">
              <input type="text" name="username" value="<%= username %>" placeholder="아이디를 입력하세요" autocomplete="username" class="longInput"></input><br></br>
              <input type="text" name="password" value="" placeholder="비밀번호를 입력하세요" autocomplete="current-password" class="longInput"></input><br></br>
              <div class="innerContainer" style="position: absolute; width: 100%; bottom: 0;">
                <div style="position: absolute; bottom: 50px; width: calc(100% - 100px);">
                  <div class="innerContainer" style="position: relative;">
                    <div class="hoverer">
                      <a href="/"><button type="button">Home</button></a>
                      <button type="submit">Submit</button>
                    </div>
                  </div>
                </div>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
